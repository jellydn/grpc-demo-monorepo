    "@bufbuild/protobuf": "1.2.0",
    "cac": "6.7.14",
    "diary": "0.4.4",
    "express": "5.0.0-beta.1"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-connect-web": "0.8.4",
    "@bufbuild/protoc-gen-es": "1.2.0",
    "@types/express": "4.17.17"
  }
}
